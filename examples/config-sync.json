{
	"version":"0.1.0-dev",
	"storage":{
		"rootDirectory":"/tmp/zot"
	},
	"http":{
		"address":"127.0.0.1",
		"port":"5000"
	},
	"log":{
		"level":"debug"
	},
	"extensions":{
		"sync":[
			{
				"url": "https://registry1:5000",
				"pollInterval": "6h",
				"tlsVerify": true,
				"credentials": {
					"username": "user",
					"password": "pass"
				},
				"certDir": "/home/user/certs",
				"content":[
					{
						"prefix":"repo1/repo",
						"tags":{
							"regex":"4.*",
							"semver":true
						}
					},
					{
						"prefix":"repo2/repo"
					}
				]
			},
			{
				"url": "https://registry2:5000",
				"pollInterval": "12h",
				"tlsVerify": false,
				"content":[
					{
						"prefix":"repo2/repo",
						"tags":{
							"semver":true
						}
					}
				]
			}
		]
	}
}